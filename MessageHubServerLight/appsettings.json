{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MessageHubDB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "MassTransit": {
    "UseAzureServiceBus": true,
    "AzureServiceBus": {
      "ConnectionString": "",
      "QueueName": "message-processing-queue"
    },
    "InMemory": {
      "Enabled": false
    }
  },
  "Tenants": {
    "demo-tenant-key-1": {
      "Name": "Demo Customer A",
      "Channels": {
        "HTTP": {
          "Endpoint": "https://api.demo-sms-provider.com/send",
          "ApiKey": "demo-api-key-1",
          "Timeout": 30000,
          "MaxRetries": 3
        },
        "SMPP": {
          "Host": "smpp.demo-provider.com",
          "Port": 2775,
          "SystemId": "demo-system-id",
          "Password": "demo-password",
          "SourceAddress": "12345",
          "Timeout": 30000
        }
      }
    },
    "demo-tenant-key-2": {
      "Name": "Demo Customer B",
      "Channels": {
        "HTTP": {
          "Endpoint": "https://api.another-provider.com/sms",
          "ApiKey": "demo-api-key-2",
          "Timeout": 25000,
          "MaxRetries": 2
        },
        "SMPP": {
          "Host": "smpp.another-provider.com",
          "Port": 2776,
          "SystemId": "another-system-id",
          "Password": "another-password",
          "SourceAddress": "54321",
          "Timeout": 25000
        }
      }
    }
  },
  "AllowedHosts": "*"
}
